{
  "functions": [{
    "source": "functions",
    "codebase": "default",
    "disallowLegacyRuntimeConfig": true,
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  }],

  "firestore": {
    "rules": "firestore.rules"
  },

  "storage": {
    "rules": "storage.rules"
  },

  "hosting": {
    "public": "docs",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "headers": [
      {
        "source": "**/*.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "**/*.{css,js,woff2,woff,ttf,eot,svg,png,jpg,jpeg,gif,webp,avif}",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      }
    ],
    "rewrites": [{
        "source": "/api/stripe-webhook",
        "function": "stripeWebhook"
      },
      {
        "source": "/api/calendly-webhook",
        "function": "calendlyWebhook"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  },

  "booking": {
    "allowed": true,
    "limit": 1,
    "period": "month",
    "cooldownUntil": "2025-12-01T00:00:00Z",
    "scheduledCountThisPeriod": 0
  },
  "entitlements": {
    "challengePack": true,
    "mentorship": true,
    "workshop": false,
    "proTools": false
  }


}