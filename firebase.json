{
  "functions": [{
    "source": "functions",
    "codebase": "default",
    "disallowLegacyRuntimeConfig": true,
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  }],

  "firestore": {
    "rules": "firestore.rules"
  },

  "hosting": {
    "public": "docs",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{
        "source": "/api/stripe-webhook",
        "function": "stripeWebhook"
      },
      {
        "source": "/api/calendly-webhook",
        "function": "calendlyWebhook"
      },
      {
        "source": "**",
        "destination": "/404.html"
      }
    ]
  },

  "booking": {
    "allowed": true,
    "limit": 1,
    "period": "month",
    "cooldownUntil": "2025-12-01T00:00:00Z",
    "scheduledCountThisPeriod": 0
  },
  "entitlements": {
    "challengePack": true,
    "mentorship": true,
    "workshop": false,
    "proTools": false
  }


}