rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // 允許所有人讀取頭像
    match /avatars/{allFiles=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 其他檔案：只允許已登入用戶讀寫
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
